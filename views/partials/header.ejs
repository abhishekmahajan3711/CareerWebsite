  <style>
    body {
      margin: 0;
      padding: 0;
    }

    .filter {
      height: 14vh;
      width: 100%;
      padding: 20px 100px;
      display: flex;
      justify-content: space-between;
      font-size: large;
    }

    .filter button {
      width: 14%;
      border-radius: 5px;
      text-align: center;
      font-size: 22px;
      text-decoration: none;
      background-color: white;
      border: 2px solid #324E7B;
      cursor: pointer;
    }

    .filter button:hover {
      background-color: #a0b5ea;
      color: #002c73;
    }

    option {
      text-align: center;

    }

    .filterChild {
      padding: 6px;
      width: 14%;
    }

    .ParentMain {
      padding-top: 20px;
      display: flex;
      flex-direction: column;
      height: auto;
      width: auto;
      gap: 25px;
    }

    .main {
      position: relative;
      height: 30vh;
      width: 60vw;
      margin: auto;
      margin-top: 5px;
      border: 2px black solid;

    }

    .main img {
      height: 100%;
      width: 40%;

    }

    .sideMain {
      height: 100%;
      width: 60%;
      float: right;
      text-align: center;
      font-size: xx-large;
      display: flex;
      justify-content: center;
      align-items: center;
      text-decoration: none;

    }

    .navbar {
      padding: 0;
      align-items: center;
    }

    .contents {
      width: 40%;
      left: 30%;
      position: relative;
    }
  </style>
